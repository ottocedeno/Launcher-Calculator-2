<section class="m-4">
  <h1 class="display-3">
    <%= @spaceport.name %>
    <%= link_to 'delete', admin_spaceport_path(@spaceport), method: :delete, class: 'btn btn-outline-danger btn-sm' if current_user.admin %>
  </h1>

  <table class="table table-sm table-bordered">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Property</th>
        <th scope="col">Value</th>
      </tr>
    </thead>
    <tbody>
      <% @spaceport.attributes.each do |key, value| %>
        <% unless ommitted_spaceport_keys(key) %>
          <tr>
            <td><%= key.humanize %></td>
            <td><%= value %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</section>
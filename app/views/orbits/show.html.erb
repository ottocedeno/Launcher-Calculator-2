<section class="m-4">
  <h1 class="display-3">
    <%= @orbit.name %>
    <%= link_to 'delete', admin_orbit_path(@orbit), method: :delete, class: 'btn btn-outline-danger btn-sm' if current_user.admin %>
  </h1>
  <p class="lead"><%= @orbit.quick_description %></p>

  <table class="table table-sm table-bordered">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Property</th>
        <th scope="col">Value</th>
      </tr>
    </thead>
    <tbody>
      <% @orbit.attributes.each do |key, value| %>
        <% unless ommitted_orbit_keys(key) %>
          <tr>
            <td><%= key.humanize %></td>
            <td><%= value %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</section>
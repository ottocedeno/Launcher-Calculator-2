<section class="m-4">
  <h1 class="display-3">Rockets</h1>
  <p>Welcome to the rockets page.  All rockets listed are either flight proven or in active development.</p>
  <p><strong>Note:</strong> during our beta program, only <span class="text-info">admins</span> will have the ability to create new conceptual rockets or edit existing ones.</p>
  <div class="mt-5 mb-4">
    <h3>Available Rockets
      <%= link_to 'Create New Rocket', new_admin_rocket_path, class: 'btn btn-outline-info btn-sm ml-3' if current_user.admin %>
    </h3>
  </div>


  <% @rockets.each do |rocket| %>
    <div class="card mb-3" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title"><%= rocket.name %></h5>
        <h6 class="card-subtitle mb-4 text-muted"><%= rocket.description %></h6>
        <%= link_to('Edit Rocket', edit_admin_rocket_path(rocket), class: 'btn btn-outline-info btn-block btn-sm') if current_user.admin %>
        <%= link_to('View Rocket', rocket_path(rocket), class: 'btn btn-outline-primary btn-block btn-sm') %>
        <%= link_to('Start Mission', '/', class: 'btn btn-primary btn-block') %>
        
      </div>
    </div>
  <% end %>
</section>
